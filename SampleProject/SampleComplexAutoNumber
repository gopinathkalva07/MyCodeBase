using System;

public class AutoNumberGenerator
{
    private static Random _random = new Random();

    public static string GenerateAutoNumber(int letterCount = 3, int numberCount = 4)
    {
        const string letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        const string numbers = "0123456789";
        char[] result = new char[letterCount + numberCount];

        for (int i = 0; i < letterCount; i++)
        {
            result[i] = letters[_random.Next(letters.Length)];
        }
        for (int i = 0; i < numberCount; i++)
        {
            result[letterCount + i] = numbers[_random.Next(numbers.Length)];
        }
        return new string(result);
    }
}